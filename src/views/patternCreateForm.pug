extends layout

block content
  h1 Add a new sewing pattern
  form(role='form' method='POST')
    div
        label(for='name') Pattern name:
        input#name(type='text', placeholder='name' name='name')
    div
        label(for='maker') Pattern Maker:
        input#maker(type='text', placeholder='maker' name='maker')
    div
        label(for='description') Description:
        textarea#description( placeholder='description' name='description')
    div 
        label(for="difficulty") Difficulty 
        select#difficulty(name="difficulty")
            each option in options 
                option(value=option.id) #{option.name}
    div 
        p Type of Pattern
        for tag in tags
            div 
                input(type="checkbox" id=tag.name name="tags" value=tag._id)
                label(for=tag.name) #{tag.name}

    button(type="submit") Submit
